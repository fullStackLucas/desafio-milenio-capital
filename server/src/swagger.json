{
  "openapi": "3.0.0",
  "info": {
    "title": "Milenio-Capital API",
    "description": "API referente ao desafio t√©cnico backend jr/pl do Milenio-Capital",
    "version": "1.0.0",
    "contact": {
      "name": "Lucas Pinheiro",
      "email": "lucas.pinheiror@gmail.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "URL base de testes"
    }
  ],
  "paths": {
    "/graph": {
      "post": {
        "summary": "Cadastro de grafo",
        "description": "Rota para cadastrar novo array com grafos",
        "tags": [
          "graph"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Graphs"
              },
              "examples": {
                "graph": {
                  "value": {
                    "data": [
                      {"source": "A", "target": "B", "distance": 5},
                      {"source": "A", "target": "C", "distance": 8},
                      {"source": "B", "target": "D", "distance": 3},
                      {"source": "B", "target": "E", "distance": 2},
                      {"source": "C", "target": "A", "distance": 5},
                      {"source": "D", "target": "C", "distance": 1},
                      {"source": "E", "target": "B", "distance": 5}
                    ]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/GraphResponse"
                }
              }
            }
          }
        }
      }
    },
    "/graph/{graphId}": {
      "get": {
        "description": "Busca um grafo completo pelo id",
        "summary": "Busca de grafos",
        "tags": ["graph"],
        "parameters": [
          {
            "name": "graphId",
            "in": "path",
            "description": "Id do grafo para busca",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#components/schemas/GraphResponse"
                }
              }
            }
          }
        }
      }
    }
  }, 
  "components": {
    "schemas": {
      "Graphs": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "source": {
                  "type": "string"
                },
                "target": {
                  "type": "string"
                },
                "distance": {
                  "type": "number"
                }
              }
            }
          }
        }
      },
      "GraphResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "data": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "source": {
                  "type": "string"
                },
                "target": {
                  "type": "string"
                },
                "distance": {
                  "type": "number"
                }
              }
            }
          }
        }
      }
    }
  }
}